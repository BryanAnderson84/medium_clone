<h1> "<%= @post.title %>" </h1>

<h4> "<%= @post.body %>" </h4>

<h5>Options:</h5>
  <% if current_user %>
    <%= link_to 'Edit Post', edit_post_path(@post) %> |
    <%= link_to 'Delete Post', post_path, method: :delete, data: {confirm: "Are you sure?"} %>
  <% else %>
    <%= link_to 'Add Comment', edit_post_path(@post) %>
    <!-- Add heart as bonus -->
  <% end %>
